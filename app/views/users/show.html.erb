<h1>User profile</h1>

<div>
  <h2>Your Reviews</h2>
  <div>
     <% @user.reviews.each do |r| %>
      <h3>Movie: <%= Movie.find(r.movie_id).title %></h3>
      <p><%= r.body %></p>
     <% end %>
  </div>
</div>


<% if profile_path(current_user.id) == profile_path(params[:id]) %>
<div>
  <h2>Profile Info</h2>
  <div>
    <%= form_for @user, url: profile_path do |f| %>
     <div>
       <div class="">

        <%= image_tag @user.avatar_url.url(:thumb) %>
       </div>
        <%= f.label :avatar_url, "Profile picture:" %>
       <%= f.file_field :avatar_url, placeholder: "Profile picture" %>
     </div>
    <div>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password%>
    </div>
    <%= f.submit %>
    <% end %>
  </div>
</div>
<% end %>
