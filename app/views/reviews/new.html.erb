<div class="container new-review">
  <h1 class = "text-center">Post New Review</h1>
  <%= form_for @review do |f| %>
    <div class = "form-group">
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: "The title of the movie", class: "form-control"%>
    </div>
    <div class = "form-group">
      <%= f.label :body %>
      <%= f.text_area :body, placeholder: "You only have 160 characters. Make em count!", class: "form-control"%>
      <br>
      <div><%= f.submit, class: "block-center" %></div>
    </div>
</div>
<% end %>
